<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:background="@color/f4f4f4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_comment"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_15sp"
            android:layout_marginLeft="@dimen/_10dp"/>

        <TextView
            android:id="@+id/close_dialog_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="x"
            android:textSize="@dimen/_15sp"
            android:gravity="center"
            android:textColor="@color/c_999"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85dp"
        android:background="@color/f2f2f2"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comment_tips"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:textSize="@dimen/_15sp"
            android:text="@string/order_comment_tips"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/star_1"
                style="@style/comment_star"/>
            <ImageView
                android:id="@+id/star_2"
                style="@style/comment_star"/>
            <ImageView
                android:id="@+id/star_3"
                style="@style/comment_star"/>
            <ImageView
                android:id="@+id/star_4"
                style="@style/comment_star"/>
            <ImageView
                android:id="@+id/star_5"
                style="@style/comment_star"
                android:layout_marginRight="0dp"/>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="8"
        android:scrollbars="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:padding="@dimen/_5dp"
        android:hint="@string/comment_hint"
        android:gravity="top"
        android:textSize="@dimen/_15sp"
        android:background="@drawable/edit_content_shape"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_15dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/c_9f9f9f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_comment_left"/>
        <TextView
            android:id="@+id/left_word_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="200"/>
        <TextView
            android:textColor="@color/c_9f9f9f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word"/>
    </LinearLayout>

    <TextView
        android:id="@+id/comment_btn"
        android:textColor="@color/feedback"
        android:textSize="@dimen/_15sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5dp"
        android:text="@string/submit_comment"
        android:background="@drawable/submit_btn_shape"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_13dp"
        android:layout_marginRight="@dimen/_13dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_height="@dimen/_50dp" />
</LinearLayout>